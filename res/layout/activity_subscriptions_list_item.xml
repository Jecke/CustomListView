<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:orientation="horizontal" 
    android:padding="6dip" 
    xmlns:android="http://schemas.android.com/apk/res/android">
  
    <CheckBox
        android:id="@+id/get_publication_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="" />

    <TextView
        android:id="@+id/get_publication_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/get_publication_checkbox"
        android:layout_alignBottom="@+id/get_publication_checkbox"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/get_publication_checkbox"
        android:text="TextView"
        android:textSize="@dimen/listview_default_text_size" />
  
</RelativeLayout>
