<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spacesavertreeview.sharing.subscriptions.ActivityPublications"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <TextView
	       android:id="@+id/lbl_publication_notice"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="5dp"
	       android:text="Selected note is XXX. Press + to accept" >
	        
	    </TextView>
	    
        <TextView
	       android:id="@+id/lbl_publication_heading"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="5dp"
	       android:layout_below="@+id/lbl_publication_notice"
	       android:textStyle="bold"
	       android:text="Your publications:" >
	        
	    </TextView>

        <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/lbl_publication_heading" >

    	</ListView>

    </RelativeLayout>

</FrameLayout>

